extends layout

block content

    div.jumbotron(style = "background-color:#999; padding-top: 2px; padding-bottom:2px")
        h1(style = "color:blue; font-size:50px; text-align:center") Hermione
        p(style = "color:#333; font-size:30px; text-align:center") An Interactive Energy Management Dashboard System

    div
        h4 Hello! I could answer questions such as:
        ul
            li Describe the conditions for {Building} when energy usage is {UsagekW} kilowatts
            li What is the predicted energy consumption for {Day}
            li What is the predicted energy consumption for the month of {Month}
            li What is the expected consumption if I change {SetPointTypeOne} to {SetPointValOne} from time {StartTime} to {EndTime}
            li What should my set points be for the best strategy

    div.container(style = "padding-top : 20px; padding-bottom: 20px")

        div(style = "background-color: black; color: white; padding: 6px 6px 6px 6px; font: bold 30px Arial; text-align: center") #{searchbin_data.building} - Usage for #{searchbin_data.usagekW}kW
        
        div.row
            div.col-sm-3(style = "background-color: #00bfff; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Day - #{searchbin_data.DayOfMonth}
            div.col-sm-3(style = "background-color: lightgreen; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Time - #{searchbin_data.TimeOfDay}
            div.col-sm-3(style = "background-color: pink; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Temperature - #{searchbin_data.AvgTemperature}
            div.col-sm-3(style = "background-color: orange; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Wind Speed - #{searchbin_data.AvgWindSpeed}
        div.row
            div.col-sm-3(style = "background-color: orange; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Humidity - #{searchbin_data.AvgHumidity}
            div.col-sm-3(style = "background-color: pink; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Solar - #{searchbin_data.AvgSolar}
            div.col-sm-3(style = "background-color: lightgreen; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Gust Speed - #{searchbin_data.AvgGusts}
            div.col-sm-3(style = "background-color: #00bfff; color: black; padding: 6px 6px 6px 6px; font: bold 20px Arial; text-align: center") Dew Point - #{searchbin_data.AvgDewPoint}

    div#lineContainer(style = "padding-top : 20px; padding-bottom: 20px")

    script.
      $(function () { 
                 var myChart = Highcharts.chart('lineContainer', {
               chart: {
                   type: 'line'
               },
               title: {
                   text: 'Energy Consumption'
               },
               xAxis: {
                   categories: [#{baseline_data.time}]
               },
               yAxis: {
                   title: {
                       text: 'Power (kW)'
                   }
               },
               series: [{
                   name: 'Power',
                   data: [#{baseline_data.y_predict}]
               }]
           });
      });

     script.
         setInterval(function() {
             location.reload(true);
         }, 3000) 
